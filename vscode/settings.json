{
    "editor.fontSize": 20,
    "editor.fontFamily": "'SF Mono', 'Fira Code', 'Geist Mono', Hasklig, 'IBM Plex Mono', Inconsolata, 'JetBrains Mono', 'Monaspace Argon', 'Source Code Pro', 'Spline Sans Mono', monospace",
    // "editor.fontLigatures": "'calt', 'liga'", // Geist Mono, Hasklig, JetBrains Mono
    // "editor.fontLigatures": "'calt', 'liga', 'cv02', 'ss03'", // Fira Code
    // "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss05', 'ss07'", // Monaspace Argon
    // "editor.fontLigatures": "'calt', 'liga', 'ss07'", // Spline Sans Mono
    "editor.rulers": [
        80
    ],
    "editor.wordWrap": "on",
    "editor.inlineSuggest.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "terminal.integrated.fontFamily": "'Iosevka Term', monospace",
    "terminal.integrated.fontSize": 20,
    "workbench.startupEditor": "none",
    "workbench.editor.empty.hint": "hidden",
    "workbench.colorTheme": "textmate.rstheme",
    "update.mode": "none",
    "telemetry.telemetryLevel": "off"
}