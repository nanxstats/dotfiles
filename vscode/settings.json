{
    "editor.fontSize": 22,
    "editor.fontFamily": "'JetBrains Mono', 'Berkeley Mono', 'Cascadia Code', 'Fira Code', 'Geist Mono', 'Google Sans Code', Hasklig, 'IBM Plex Mono Text', Inconsolata, 'Iosevka Extended', 'Ligalex Mono', 'Monaspace Argon', 'MonoLisa Variable', 'SF Mono', 'Source Code Pro', 'TheSansMono Office', 'Zed Plex Mono', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": "'calt', 'liga'", // All others supporting coding ligatures
    // "editor.fontLigatures": "'calt', 'liga', 'lnum', 'zero', 'cv01'", // TheSansMono
    // "editor.fontLigatures": "'calt', 'liga', 'cv02', 'ss03'", // Fira Code
    // "editor.fontLigatures": "'calt', 'liga', 'ss03', 'ss04'", // Geist Mono
    // "editor.fontLigatures": "'calt', 'liga', 'ss01'", // Google Sans Code
    // "editor.fontLigatures": "'calt', 'liga', 'ss02', 'ss03'", // IBM Plex Mono Text, Ligalex Mono (Text), Zed Plex Mono (Text)
    // "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss05', 'ss07'", // Monaspace Argon
    "editor.rulers": [
        80
    ],
    "editor.wordWrap": "on",
    "editor.inlineSuggest.enabled": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.unicodeHighlight.nonBasicASCII": true,
    "editor.renderWhitespace": "trailing",
    "diffEditor.ignoreTrimWhitespace": false,
    "terminal.integrated.fontFamily": "'JetBrains Mono', monospace",
    "terminal.integrated.fontSize": 18,
    "workbench.startupEditor": "none",
    "workbench.editor.empty.hint": "hidden",
    "workbench.colorTheme": "textmate.rstheme",
    "update.mode": "none",
    "telemetry.telemetryLevel": "off"
}